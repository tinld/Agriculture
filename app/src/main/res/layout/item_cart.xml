<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingHorizontal="7dp"
    android:paddingVertical="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_cart">
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:id="@+id/productItemImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/money_bag_cambodian_riel_color_icon" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/nameProduct"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:text="Name Product"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:textColor="#2A2F4F"/>
                <ImageButton
                    android:id="@+id/cancelCartProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/exit"
                    android:scaleType="centerInside"/>
                </LinearLayout>
            <TextView
                android:id="@+id/quantityProduct"
                android:layout_width="230dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_height="25dp"
                android:text="Số lượng: 1"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:gravity="center" />
            <TextView
                android:id="@+id/priceProduct"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:text="Price: 50,000 VND"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#F15A59"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>